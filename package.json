{
  "name": "webpack-boilerplate",
  "version": "3.0.0",
  "description": "Plain webpack 3 Boilerplate with Babel and SASS.",
  "author": "Matthew Wilber",
  "license": "MIT",
  "homepage": "https://github.com/mwilber/webpack-boilerplate.git",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev webpack-dev-server --port 8699 --progress --open --config webpack.config.dev.js",
    "build": "webpack -p --progress --config webpack.config.build.js",
    "sass-build": "node-sass --source-map true assets/styles/app-shell.scss -o assets/css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mwilber/webpack-boilerplate.git"
  },
  "dependencies": {
    "material-design-lite": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "ejs-loader": "^0.3.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4"
  }
}
